<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:src="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/main_background"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/toolbarContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/main_background"
                android:orientation="horizontal"
                android:paddingHorizontal="18dp"
                android:paddingVertical="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back"
                    app:tint="@color/back_icon_color" />

                <TextView
                    android:id="@+id/toolbar"
                    style="@style/NauTextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:layout_marginStart="12dp"
                    android:text="@string/new_password_toolbar" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/changePasswordContainer"
                android:layout_width="match_parent"
                android:paddingHorizontal="18dp"
                android:background="@color/main_background"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/toolbarContainer"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/NauTextAppearance.AppCompat.SubTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/change_password_description" />

                <TextView
                    style="@style/NauTextAppearance.AppCompat.SubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/enter_your_current_password" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <EditText
                        android:id="@+id/currentPassword"
                        style="@style/NauTextAppearance.AppCompat.SubTitle"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/background_input"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:inputType="textPassword"
                        android:paddingHorizontal="13dp"
                        android:paddingVertical="14dp"
                        android:singleLine="true"
                        android:textColor="@color/main_text"
                        android:textSize="15sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/showCurrentPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_eye_gray"
                        app:layout_constraintBottom_toBottomOf="@id/currentPassword"
                        app:layout_constraintEnd_toEndOf="@id/currentPassword"
                        app:layout_constraintTop_toTopOf="@id/currentPassword" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    style="@style/NauTextAppearance.AppCompat.SubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/enter_new_password" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <EditText
                        android:id="@+id/newPasswordFirst"
                        style="@style/NauTextAppearance.AppCompat.SubTitle"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/background_input"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:inputType="textPassword"
                        android:paddingHorizontal="13dp"
                        android:paddingVertical="14dp"
                        android:singleLine="true"
                        android:textColor="@color/main_text"
                        android:textSize="15sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/showNewPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_eye_gray"
                        app:layout_constraintBottom_toBottomOf="@id/newPasswordFirst"
                        app:layout_constraintEnd_toEndOf="@id/newPasswordFirst"
                        app:layout_constraintTop_toTopOf="@id/newPasswordFirst" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/newPasswordConfirmTitle"
                    style="@style/NauTextAppearance.AppCompat.SubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/confirm_new_password" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <EditText
                        android:id="@+id/newPasswordConfirmValue"
                        style="@style/NauTextAppearance.AppCompat.SubTitle"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/background_input"
                        android:gravity="center_vertical"
                        android:lines="1"
                        tools:text="asdasd"
                        android:paddingHorizontal="13dp"
                        android:paddingVertical="14dp"
                        android:singleLine="true"
                        android:textColor="@color/main_text"
                        android:textSize="15sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/showConfirmNewPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_eye_gray"
                        app:layout_constraintBottom_toBottomOf="@id/newPasswordConfirmValue"
                        app:layout_constraintEnd_toEndOf="@id/newPasswordConfirmValue"
                        app:layout_constraintTop_toTopOf="@id/newPasswordConfirmValue" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/btnChangePassword"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/password_button_disabled_color"
                    android:background="@drawable/button_link"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="8dp"
                    android:text="@string/next">

                    <TextView
                        style="@style/NauTextAppearance.AppCompat.Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/change_password_btn"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                </LinearLayout>

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>

