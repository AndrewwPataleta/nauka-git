<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_background"
    android:paddingVertical="8dp"
    android:paddingStart="16dp">


    <TextView
        android:id="@+id/title"
        style="@style/NauTextAppearance.AppCompat.Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lineHeight="21dp"
        android:textColor="@color/main_text"
        android:textFontWeight="500"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/removeEducation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Ответственный работник" />

    <TextView
        android:id="@+id/titleDesc"
        style="@style/NauTextAppearance.AppCompat.Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lineHeight="21dp"
        android:textColor="@color/main_text"
        android:textFontWeight="500"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/removeEducation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        tools:text="Ответственный работник" />

    <ImageView
        android:id="@+id/remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="16dp"
        android:src="@drawable/ic_close"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/delete_education_gray" />

    <TextView
        android:id="@+id/subTitle"
        style="@style/NauTextAppearance.AppCompat.Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/secondary_text"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/removeEducation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleDesc"
        tools:text="Средняя" />

    <TextView
        android:id="@+id/subTitleDirection"
        style="@style/NauTextAppearance.AppCompat.Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/secondary_text"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/removeEducation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subTitle"
        tools:text="Средняя школа №2 при Самарском Поварском Университете" />

</androidx.constraintlayout.widget.ConstraintLayout>