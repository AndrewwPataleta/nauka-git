<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/career_info_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="@color/main_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/NauTextAppearance.AppCompat.SubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/degree_or_academic" />


    </LinearLayout>


    <EditText
        android:id="@+id/degreeValue"
        style="@style/NauTextAppearance.AppCompat.SubTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_input"
        android:gravity="center_vertical"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:lines="1"
        android:paddingHorizontal="13dp"
        android:paddingVertical="14dp"
        android:singleLine="true"
        android:textColor="@color/main_text"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/editNameError"
        style="@style/NauTextAppearance.AppCompat.SubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/incorrect_address"
        android:textColor="@color/color_red_light"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/NauTextAppearance.AppCompat.SubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/year_get" />


    </LinearLayout>

    <TextView
        android:id="@+id/dateGetValue"
        style="@style/NauTextAppearance.AppCompat.SubTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_input"
        android:gravity="center_vertical"
        android:lines="1"
        android:paddingHorizontal="13dp"
        android:paddingVertical="14dp"
        android:singleLine="true"
        android:textColor="@color/main_text"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/editSecondNameError"
        style="@style/NauTextAppearance.AppCompat.SubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/incorrect_address"
        android:textColor="@color/color_red_light"
        android:visibility="gone" />


</LinearLayout>
