<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:src="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/contentContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/infoContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/profileTopBackground"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="80dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:id="@+id/profilePreviewContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="50dp"
                            android:background="@drawable/background_profile_card_info"
                            android:orientation="vertical"
                            android:padding="16dp"
                            app:layout_constraintTop_toTopOf="@id/profileImage">

                            <LinearLayout
                                android:id="@+id/previewUserInfo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="50dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/name"
                                    style="@style/NauTextAppearance.AppCompat.Title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:text="Анастасия Компост-Марковская" />

                                <TextView
                                    android:id="@+id/firstDescription"
                                    style="@style/NauTextAppearance.AppCompat.SubTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:visibility="gone"
                                    tools:text="Заслуженный деятель науки РФ" />

                                <TextView
                                    android:id="@+id/secondDescription"
                                    style="@style/NauTextAppearance.AppCompat.SubTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:visibility="gone"
                                    tools:text="Доктор физико-математических наук" />

                                <TextView
                                    android:id="@+id/thirdDescription"
                                    style="@style/NauTextAppearance.AppCompat.SubTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:visibility="gone"
                                    tools:text="Профессор" />

                                <TextView
                                    android:id="@+id/mainDescription"
                                    style="@style/NauTextAppearance.AppCompat.SubTitleDark"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:maxLines="2"
                                    android:visibility="gone"
                                    tools:text="Незнание, как известно, не освобождает от ответственности. И если официальная наука не мож..." />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/btnCreateNote"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="12dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/button_link"
                                    android:gravity="center_horizontal|center_vertical"
                                    android:orientation="horizontal"
                                    android:paddingHorizontal="8dp"
                                    android:paddingVertical="8dp"
                                    android:text="@string/next">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_write" />

                                    <TextView
                                        style="@style/NauTextAppearance.AppCompat.Title"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"
                                        android:text="@string/create_note"
                                        android:textColor="@color/white"
                                        android:textSize="15sp" />

                                </LinearLayout>


                                <FrameLayout
                                    android:id="@+id/moreBtn"
                                    android:layout_width="50dp"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/bg_button_more"
                                    android:padding="16dp">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_more"
                                        src:tint="@color/color_more" />

                                </FrameLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/workExperienceContainer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:orientation="vertical">


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/currentLocation"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/ic_location" />

                                <TextView
                                    android:id="@+id/currentLocationValue"
                                    style="@style/NauTextAppearance.AppCompat.SubTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="10dp"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/main_text"
                                    tools:text="г. Барселона Испания" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/moreInfoContainer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="6dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_more_info" />

                                <TextView
                                    style="@style/NauTextAppearance.AppCompat.SubTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="10dp"
                                    android:gravity="center_vertical"
                                    android:text="@string/know_more"
                                    android:textColor="@color/text_link" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/subsAmountContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/background_profile_card_info"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            app:layout_constraintTop_toBottomOf="@id/profilePreviewContainer">

                            <TextView
                                android:id="@+id/followersFollowingAmount"
                                style="@style/NauTextAppearance.AppCompat.SubTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:textColor="@color/main_text"
                                android:textSize="15sp"
                                tools:text="999 подписчиков  ∙  666 подписок" />

                        </LinearLayout>

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profileImage"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            app:civ_border_color="@color/main_background"
                            app:civ_border_width="2dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/initials"
                            style="@style/NauTextAppearance.AppCompat.SubTitle"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="40sp"
                            app:layout_constraintBottom_toBottomOf="@id/profileImage"
                            app:layout_constraintEnd_toEndOf="@id/profileImage"
                            app:layout_constraintStart_toStartOf="@+id/profileImage"
                            app:layout_constraintTop_toTopOf="@id/profileImage" />

                        <com.google.android.material.tabs.TabLayout
                            android:id="@+id/tabs"
                            android:layout_width="0dp"
                            android:layout_height="?attr/actionBarSize"
                            android:layout_gravity="start"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/background_profile_card_info"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/subsAmountContainer"
                            app:tabIndicatorColor="@color/text_link"
                            app:tabIndicatorHeight="1dp"
                            app:tabMode="scrollable"
                            app:tabTextAppearance="@style/NauTab">

                            <com.google.android.material.tabs.TabItem
                                android:id="@+id/actualTab"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/actual_title" />

                            <com.google.android.material.tabs.TabItem
                                android:id="@+id/popularTab"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/popular_title" />

                        </com.google.android.material.tabs.TabLayout>


                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:id="@+id/progressLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_logo_loading" />

            </FrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/feedContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="false"
                android:scrollbars="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>

