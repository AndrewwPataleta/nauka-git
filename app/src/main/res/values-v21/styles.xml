<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="BaseTheme">
        <item name="bottomSheetDialogTheme">@style/Theme.NoWiredStrapInNavigationBar</item>
    </style>

    <style name="Theme.NoWiredStrapInNavigationBar" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item> 
        <item name="android:statusBarColor">@color/transparent
        </item> 
        
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="backgroundTint">@android:color/white</item>        </style>

</resources>
